@{
    ViewBag.Title = "Home Page";
}


<div id="TMGPrototype2">
    <h1><a href="index.html"><img src="images/logo.png" alt=""></a></h1>
    <ul class='sets'>
        <li data-setName="Red Wine">
            <ul>
                @if (ViewBag.all != null)
            {
                    <li data-srcPreview="images/red1.jpg">
                        <div>
                            @foreach (var item in ViewBag.all)
                        {
                                <div class="content">
                                    <img src="@item.Labels.Medium" height="120" width="120" alt="">
                                    <h3></h3>
                                    <p><a href="#" class="tm_link"><b>@item.name</b></a>@item.description</p>

                                    <ul>
                                        <li><span>Max Ibu:</span> @item.style.ibuMax</li>
                                        <li><span>Abv:</span> @item.abv</li>
                                        <li><span>ServingTemperature: </span> @item.servingTemperatureDisplay</li>
                                        <li><span>FoodPairings: </span> @item.foodPairings</li>
                                        <li><span>OriginalGravity: </span>@item.originalGravity;</li>
                                        <li><span>Availablility:</span>@item.available.name</li>
                                    </ul>
                                    <div class="alright"><a href="@Url.Action("All","Home")" class="btn">Show All</a></div>
                                </div>

                        }

                        </div>

                    </li>
            }
                
            </ul>
        </li>
        <li data-setName="White Wine">

            @if (ViewBag.all != null)
              {
                <ul>

                    <li data-srcPreview="images/red1.jpg">

                        @foreach (var item in ViewBag.all)
                {
