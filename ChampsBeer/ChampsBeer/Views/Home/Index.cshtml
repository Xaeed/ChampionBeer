                                        </ul>
                                        <div class="alright"><a href="@Url.Action("All","Home")" class="btn">Read More</a></div>
                                    </div>
                                }
                            </div>

                        }

                    </li>
                </ul>
            }
        </li>
                   
    </ul>
</div>